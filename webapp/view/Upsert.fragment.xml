<core:FragmentDefinition xmlns="sap.m" xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
	<!--<Dialog xmlns:m="sap.m" stretch="true" showHeader="true" title="User Form">-->
	<Dialog showHeader="true" title="User Form" contentWidth="50%" contentHeight="50%">
		<content>
		<sap.ui.layout.form:Form xmlns:sap.ui.layout.form="sap.ui.layout.form" editable="true" id="form0">
	        <sap.ui.layout.form:formContainers>
	            <sap.ui.layout.form:FormContainer id="container0">
	                <sap.ui.layout.form:formElements>
	                    <sap.ui.layout.form:FormElement label="User ID" id="labelUsrid">
	                        <sap.ui.layout.form:fields>
	                            <Input width="100%" id="inputUsrid" required="true" valueStateText="User ID field is mandatory!"/>
	                        </sap.ui.layout.form:fields>
	                    </sap.ui.layout.form:FormElement>
	                    <sap.ui.layout.form:FormElement label="First Name" id="element1">
	                        <sap.ui.layout.form:fields>
	                            <Input width="100%" id="inputFirstname" required="true" valueStateText="First Name field is mandatory!"/>
	                        </sap.ui.layout.form:fields>
	                    </sap.ui.layout.form:FormElement>
	                    <sap.ui.layout.form:FormElement label="Last Name" id="element2">
	                        <sap.ui.layout.form:fields>
	                            <Input width="100%" id="inputLastname" required="true" valueStateText="Last Name field is mandatory!"/>
	                        </sap.ui.layout.form:fields>
	                    </sap.ui.layout.form:FormElement>
	                    <sap.ui.layout.form:FormElement label="Gender" id="element3">
	                        <sap.ui.layout.form:fields>
	                            <ComboBox xmlns="sap.m" id="inputGender" required="true" valueStateText="Gender field is mandatory!">
	                                <items>
	                                    <core:Item xmlns:core="sap.ui.core" key="1" text="Male" id="item0"/>
	                                    <core:Item xmlns:core="sap.ui.core" key="2" text="Female" id="item1"/>
	                                    </items>
	                            </ComboBox>
	                        </sap.ui.layout.form:fields>
	                    </sap.ui.layout.form:FormElement>
	                </sap.ui.layout.form:formElements>
	            </sap.ui.layout.form:FormContainer>
	        </sap.ui.layout.form:formContainers>
	        <sap.ui.layout.form:layout>
	            <sap.ui.layout.form:ResponsiveGridLayout id="layout0"/>
	        </sap.ui.layout.form:layout></sap.ui.layout.form:Form>            
	    </content>
	    <beginButton>
	    	<Button text="Save" press="onUpsert" icon="sap-icon://save"/>
	    </beginButton>
	    <endButton>
            <Button text="Close" press="onClosePopup" icon="sap-icon://sys-cancel"/>
	    </endButton>
	</Dialog>
</core:FragmentDefinition>
